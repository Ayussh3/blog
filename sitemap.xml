---
layout: nil
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{ site.url_for_sitemaps }}{{site.baseurl}}</loc>
    </url>
    
    {% for page in site.pages %}
        {% if page.layout != nil %}
        {% if page.layout != feed %}

        <url>
            <loc>{{ site.url_for_sitemaps }}{{site.baseurl}}{{ page.url | remove: '404.html' | remove: 'sitemap.xml' | remove: 'feed.xml' | remove: 'browserconfig.xml' }}</loc>
        </url>

        {% endif %}
        {% endif %}

    {% endfor %}

    {% for post in site.posts %}
    <url>
        <loc>{{ site.url_for_sitemaps }}{{site.baseurl}}{{ post.url }}</loc>
    </url>
    {% endfor %}
</urlset>