---
---
[
	{% for post in site.posts %}
		{
		  "title"    : "{{ post.title | escape }}",
		  "category" : "{{ post.category }}",
		  "url"     : "{{ post.url }}",
		  "date"     : "{{ post.date }}",
		  "content"	: "{{ post.content | strip_html | json | xml_escape | newline_to_br | strip_newlines | remove: '\n' | remove: '\.' | replace: '&amp;quot;;', '&ldquo;' | replace: '&amp;quot;', '&ldquo;', | replace: ',',' ,'  }}"
		} {% if forloop.last %}{% else %},{% endif %}
	{% endfor %}
]